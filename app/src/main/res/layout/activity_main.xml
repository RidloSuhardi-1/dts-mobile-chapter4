<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="464dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gambar3"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="464dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gambar2"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="464dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/gambar1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="464dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/cover_hero" />

        </FrameLayout>

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/search"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginTop="47dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Ridlo Shuhardi,"
            android:textSize="17dp"
            android:textColor="#FFF"
            android:fontFamily="@font/metropolis_medium"
            android:layout_marginTop="47dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wanna plan\nyour next trip?"
            android:textSize="29dp"
            android:textColor="#FFF"
            android:fontFamily="@font/metropolis_black"
            android:layout_marginTop="75dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jasper National Park"
            android:textSize="24dp"
            android:textColor="#FFF"
            android:fontFamily="@font/metropolis_black"
            android:layout_marginTop="365dp"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alberta, Canada"
            android:textSize="13dp"
            android:textColor="#FFF"
            android:fontFamily="@font/metropolis_semibold"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="20dp"
            />
        
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            >
            
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="158dp"
                    android:layout_height="58dp"
                    android:background="@color/btn_active"
                    app:backgroundTint="#2F80ED"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="Restaurant"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:layout_marginTop="510dp"
                    android:layout_marginLeft="20dp" />

                <Button
                    android:layout_width="158dp"
                    android:layout_height="58dp"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="Hotels"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_marginTop="510dp"
                    android:layout_marginLeft="20dp" />

                <Button
                    android:layout_width="158dp"
                    android:layout_height="58dp"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:fontFamily="@font/metropolis_semibold"
                    android:text="Tickets"
                    android:textColor="#333333"
                    android:textSize="14dp"
                    android:layout_marginTop="510dp"
                    android:layout_marginLeft="20dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="590dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product1"
                    android:layout_marginRight="60dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginBottom="35dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product3"
                    android:layout_marginRight="60dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product1" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>




</ScrollView>